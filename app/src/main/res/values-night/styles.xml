<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ButtonStyleMain" parent="Widget.MaterialComponents.Button">

        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_marginLeft">@dimen/main_padding</item>
        <item name="android:layout_marginRight">@dimen/main_padding</item>
        <item name="android:layout_weight">@dimen/main_layout_weight</item>
        <item name="android:backgroundTint">@color/button</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/main_text_size</item>
        <item name="cornerRadius">@dimen/main_corner_radius</item>
        <item name="iconGravity">textStart</item>
        <item name="iconTint">@color/black</item>
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>

    </style>
    
    <style name="TextViewSettings">
        
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item> 
        <item name="android:layout_gravity">start</item>
        <item name="android:layout_marginStart">@dimen/sett_padding</item>
        <item name="android:layout_marginTop">@dimen/sett_margin_top</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/sett_text_size</item>
        <item name="fontFamily">@font/ys_text_regular</item>
        <item name="android:textFontWeight">400</item>

    </style>
    
    <style name="ImageViewSettings">
        <item name="android:layout_width">@dimen/sett_icon</item>
        <item name="android:layout_height">@dimen/sett_icon</item>
        <item name="android:layout_gravity">end</item>
        <item name="android:layout_marginTop">@dimen/sett_margin_top</item>
        <item name="android:layout_marginEnd">@dimen/sett_margin_end</item>
    </style>

    <style name="LinerLayoutMain">
        <item name="android:background">@color/backgroundNight</item>
    </style>

    <style name="TextCollor">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="SettingsButtomBack">
        <item name="srcCompat">@drawable/backnight</item>

    </style>


</resources>